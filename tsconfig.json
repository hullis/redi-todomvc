{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react",
    "lib": [
      "esnext",
      "dom"
    ],
    "sourceMap": true,
    "target": "es5",
    "outDir": "out",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
